<div class="container">
<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-sign-in"></span> Signup</h1>

    <div ng-show="alert.length > 0" class="alert alert-danger">{{alert}}</div>

    <!-- LOGIN FORM -->
    <form id="signupform" role="form">

        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" ng-model="user.username">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" ng-model="user.password">
        </div>

        <button id="btn-signup" type="button" class="btn btn-warning btn-lg" ng-click="signup(user)">Signup</button>

    </form>

    <hr>

    <p>Already have an account? <a href="#/login">Login</a></p>
    <p>Or go <a href="/">home</a>.</p>

</div>
</div>

