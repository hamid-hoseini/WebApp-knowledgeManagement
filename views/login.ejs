<div class="container">
<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-sign-in"></span> Login</h1>

    <div ng-show="alert.length > 0" class="alert alert-danger">{{alert}}</div>

    <!-- LOGIN FORM -->
    <form id="loginform"  role="form">
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" ng-model="user.username">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" ng-model="user.password">
        </div>

        <button type="submit" class="btn btn-warning btn-lg" ng-click="login(user)" id="btn-login">Login</button>
    </form>

    <hr>

    <p>Need an account? <a href="#/signup">Signup</a></p>
    <p>Or go <a href="/">home</a>.</p>

</div>
</div>
